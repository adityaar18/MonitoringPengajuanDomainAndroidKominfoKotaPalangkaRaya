<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

  <ImageView
      android:id="@+id/top_splash"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/logo"
      app:layout_constraintBottom_toTopOf="@+id/bottom_splash"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:contentDescription="@string/logo_top" />

  <ImageView
      android:id="@+id/bottom_splash"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:src="@drawable/logo_swap_data"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:contentDescription="@string/logo_bottom" />

  </androidx.constraintlayout.widget.ConstraintLayout>